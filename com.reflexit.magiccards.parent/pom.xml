		</repository>

	</repositories>-->

	<modules>
		<module>../com.reflexit.magiccards.target</module>
		<module>../com.reflexit.magiccards.core</module>
		<module>../com.reflexit.magiccards.core.nl1</module>
		<module>../com.reflexit.magicassistant.p2</module>
		<module>../com.reflexit.magiccards.db</module>
		<module>../com.reflexit.magiccards.help</module>
		<module>../com.reflexit.magiccards.ui</module>
		<module>../com.reflexit.magiccards.ui.chart</module>
		<module>../com.reflexit.magiccards.ui.graphics</module>
		<module>../com.reflexit.mtgtournament.core</module>
		<module>../com.reflexit.mtgtournament.ui</module>

		<module>../com.reflexit.magiccards_rcp</module>
		<module>../com.reflexit.mtgtournament.feature</module>
		<module>../com.reflexit.magicassistant.p2.feature</module>
		<module>../com.reflexit.magiccards.feature</module>
		<module>../com.reflexit.magiccards.feature.rcp</module>


		<module>../com.reflexit.unittesting</module>
		<module>../com.reflexit.magiccards.core.test</module>

		<module>../com.reflexit.magicassistant.ui.tests</module>
		<module>../com.reflexit.magicassistant.swtbot.tests</module>
		<module>../com.reflexit.mtgtournament.core.tests</module>
		<module>../com.reflexit.magiccards.product</module>

	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<target>
						<artifact>
							<groupId>com.reflexit.magiccards</groupId>
							<artifactId>rcp_master</artifactId>
							<version>1.5.1-SNAPSHOT</version>
						</artifact>
					</target>
					<environments>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<useUIHarness>false</useUIHarness>
					<useUIThread>false</useUIThread>
					<testFailureIgnore>true</testFailureIgnore>
					<dependencies>
						<dependency>
							<artifactId>org.eclipse.platform.feature.group</artifactId>
							<type>p2-installable-unit</type>
						</dependency>
					</dependencies>
				</configuration>
			</plugin>
         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>findbugs-maven-plugin</artifactId>
            <version>3.0.4</version>
            <configuration>
               <excludeFilterFile>../com.reflexit.magiccards.parent/findbugs-exclude.xml</excludeFilterFile>
               <findbugsXmlOutput>true</findbugsXmlOutput>
               <failOnError>false</failOnError>
            </configuration>
            <executions>
               <execution>
                  <goals>
                     <goal>check</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
		</plugins>
	</build>
</project>
